<% include ../partials/header %>

<header>ChillOut</header>
<center>
<div class= "box">
  <form method="post">
    <header style="font-size: 25px">Register new Hotel</header>
    <br>
    <label  for="name">Hotel name</label><br>
    <input type="text" name="name" required><br>
    <label  for="email">Your email</label><br>
    <input type="text" name="O_email" required><br>
    <label  for="stars">Stars</label>
    <input type="number" name="stars" min="1" max="5" required><br><br /><br />

    <label  for="premium">Premium</label>
    <input type="checkbox" name="premium"><br>
    <label  for="gym">Gym</label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    <input type="checkbox" name="gym"><br>
    <label  for="pool">Pool</label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    <input type="checkbox" name="pool"><br>
    <label  for="bar">Bar</label>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    <input type="checkbox" name="bar"><br><br /><br />

    <label  for="country">Country</label><br>
    <input type="text" name="country" required><br>
    <label  for="city">City</label><br>
    <input type="text" name="city" required><br>
    <label  for="district">District</label><br>
    <input type="text" name="district" required><br>

    <button type="submit">Register</button>
  </form>
</div>
</center>

